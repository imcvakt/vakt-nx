{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@vakt-web/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@vakt-web/logistics/feature-planner": [
        "libs/logistics/feature-planner/src/index.ts"
      ],
      "@vakt-web/logistics/data-access": [
        "libs/logistics/data-access/src/index.ts"
      ],
      "@vakt-web/logistics/feature-movement": [
        "libs/logistics/feature-movement/src/index.ts"
      ],
      "@vakt-web/logistics/feature-open-commitment": [
        "libs/logistics/feature-open-commitment/src/index.ts"
      ],
      "@vakt-web/shared/assets": ["libs/shared/assets/src/index.ts"],
      "@vakt-web/logistics/ui": ["libs/logistics/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
